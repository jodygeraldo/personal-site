{
  "name": "jodygeraldo.com",
  "author": "Jody Geraldo",
  "private": true,
  "description": "Personal portfolio site for Jody Geraldo",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "postinstall": "remix setup cloudflare-pages",
    "clean": "rimraf ./cache ./node_modules/.cache ./public/build",
    "build:css": "tailwindcss -m -i ./app/styles/dark.css -o ./app/dark.css && tailwindcss -m -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "build:remix": "cross-env NODE_ENV=production remix build",
    "build": "run-s build:*",
    "pre:dev": "rimraf ./public/build",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev:css": "tailwindcss -w -i ./app/styles/tailwind.css -o ./app/tailwind.css",
    "dev": "npm run pre:dev && cross-env NODE_ENV=development remix build && run-p dev:*",
    "start": "cross-env NODE_ENV=production npm run dev:wrangler",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx ./app",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --fix --ext js,jsx,ts,tsx ./app/",
    "fmt:check": "prettier --check ./app/**/*.{js,jsx,ts,tsx}",
    "fmt": "prettier --check --write ./app/**/*.{js,jsx,ts,tsx}",
    "check": "npm run lint && npm run fmt:check"
  },
  "dependencies": {
    "@headlessui/react": "^1.5.0",
    "@radix-ui/react-popover": "^0.1.6",
    "@radix-ui/react-select": "^0.1.1",
    "@radix-ui/react-tabs": "^0.1.5",
    "@radix-ui/react-toast": "^0.1.1",
    "@remix-run/cloudflare-pages": "^1.2.3",
    "@remix-run/react": "^1.2.3",
    "clsx": "^1.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.2.3",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.2.3",
    "@remix-run/eslint-config": "^1.2.3",
    "@tailwindcss/forms": "^0.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "autoprefixer": "^10.4.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "node_modules",
    "public/build"
  ]
}
