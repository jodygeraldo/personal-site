{
  "name": "jodygeraldo.com",
  "author": "Jody Geraldo",
  "description": "Personal portfolio site for Jody Geraldo",
  "license": "MIT",
  "sideEffects": false,
  "scripts": {
    "cleanup": "rimraf ./.cache ./node_modules ./public/build ./functions",
    "generate:css": "tailwindcss -i ./app/styles/tailwind.css -o ./app/styles/build/tailwind.css",
    "build:css": "npm run generate:css -- --minify",
    "build:remix": "remix build",
    "build": "run-s build:*",
    "pre:dev": "rimraf ./public/build && remix build",
    "dev:css": "npm run generate:css -- --watch",
    "dev:remix": "cross-env NODE_ENV=development remix watch",
    "dev:wrangler": "cross-env NODE_ENV=development wrangler pages dev ./public",
    "dev": "npm run pre:dev && run-p dev:*",
    "start": "npm run build && cross-env NODE_ENV=production npm run dev:wrangler",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --ext js,jsx,ts,tsx ./app",
    "lint:fix": "eslint --cache --cache-location ./node_modules/.cache/.eslintcache --fix --ext js,jsx,ts,tsx ./app/",
    "fmt": "prettier --check --write ./app/**/*.{js,jsx,ts,tsx}",
    "validate": "npm run lint && npm run fmt",
    "test": "vitest"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^0.1.6",
    "@radix-ui/react-popover": "^0.1.6",
    "@radix-ui/react-tabs": "^0.1.5",
    "@radix-ui/react-toast": "^0.1.1",
    "@remix-run/cloudflare": "^1.3.5",
    "@remix-run/cloudflare-pages": "^1.3.5",
    "@remix-run/react": "^1.3.5",
    "clsx": "^1.1.1",
    "framer-motion": "^6.2.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "tiny-invariant": "^1.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.2.0",
    "@remix-run/dev": "^1.3.5",
    "@remix-run/eslint-config": "^1.3.5",
    "@tailwindcss/forms": "^0.5.0",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.1.1",
    "@types/eslint": "^8.4.1",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@vitejs/plugin-react": "^1.3.1",
    "autoprefixer": "^10.4.2",
    "c8": "^7.11.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.9.0",
    "happy-dom": "^2.55.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.8",
    "prettier": "^2.5.1",
    "prettier-plugin-tailwindcss": "^0.1.8",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.0.23",
    "typescript": "^4.5.5",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "^0.9.3",
    "wrangler": "beta"
  },
  "engines": {
    "node": ">=14"
  },
  "eslintIgnore": [
    "node_modules",
    "public/build"
  ]
}
